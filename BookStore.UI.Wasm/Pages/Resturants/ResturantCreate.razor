@page "/resturants/create/"

@inject IResturantRepository _repo
@inject NavigationManager _navManager
@inject IToastService _taostService


<h3>Create A Resturant</h3>

<EditForm Model="Model" OnValidSubmit="CreateResturant">
    
    <DataAnnotationsValidator />
            
    <ValidationSummary />
    
    <div class="form-group">
        <label for="Name">Name</label>
        <InputText @bind-Value="@Model.Name" class="form-control" id="Name"/>
    </div>
    <div class="form-group">
        <label for="Style">Style</label>
        <InputText @bind-Value="@Model.Style" class="form-control" id="Style"/>
    </div>
    <div class="form-group">
        <label for="Distance">Distance</label>
        <InputNumber @bind-Value="@Model.Distance" class="form-control" id="Distance"/>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <InputTextArea @bind-Value="@Model.Address" class="form-control" id="Address"/>
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <InputNumber @bind-Value="@Model.Rating" class="form-control" id="Rating"/>
    </div>



    <button class="btn btn-primary" type="submit">
        <span class="oi oi-pencil"></span>
        Submit Resturant
    </button>

    <button @onclick="BackToList" class="btn btn-warning">
        <span class="oi oi-media-skip-backward"></span>
        Back to List
    </button>
</EditForm>

@code {
    private Resturant Model = new Resturant();

    private async Task CreateResturant()
    {
        var response = await _repo.Create(Endpoints.AuthorsEndpoint, Model);
        if (response != null)
        {
            _taostService.ShowSuccess("Resturant created successfully");
            BackToList();
        }
    }

    private void BackToList()
    {
        _navManager.NavigateTo("/resturants/");
    }
}